  <div class="container mb-5">
      <div class="headings d-flex flex-row pt-3 pb-5">
        <h2 class="text-left py-3">
        <%= link_to 'All Scores', scores_path %>
        </h2>
        <div class="d-flex ml-3 align-items-center">
           <!-- Search Bar -->
            <%= form_tag scores_path, method: :get do %>
              <div class="form-group-search">
                <%= text_field_tag :query,
                params[:query],
                class: "searchbar",
                placeholder: "Title, Composer ..."%>
                <%#= submit_tag %>
                <button type="submit">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-search"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
                </button>
              </div>
            <% end %>
        </div>
      </div>
        <!-- End Search Bar -->
        <div class="grid-container">
          <% @scores.each do |score| %>
            <%= link_to score_path(score) do %>
              <div class="score-card d-flex flex-column align-items-start">
                <% if score.file.attached? %>
                  <img src="<%= cl_image_path score.file.key, :format => :jpg, :page=>1, height: 180, width: 140, crop: :fill %>">
                <% else %>
                  <img src="https://cdn.glitch.com/96d14086-88aa-4431-9b90-c5a325656bc3%2Fwolfgang-cover.png?v=1606244253539">
                <% end %>
                <div class="score-details">
                  <span><%= score.composer.name %></span>
                  <h4><%= score.title %></h4>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
