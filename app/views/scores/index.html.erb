  <div class="container mb-5">
      <div class="headings d-flex flex-column pt-3 pb-5">
        <h2 class="text-left py-3">All Scores</h2>

        <div class="d-flex flex-row">
        <!-- Search Bar -->

            <%= form_tag scores_path, method: :get do %>
            <%= text_field_tag :query,
            params[:query],
            class: "searchbar",
            placeholder: "Title, Composer ..."
            %> 
            
            <%= submit_tag "Search", class: "login-btn" %>
            <% end %>
          </div>
        <!-- End Search Bar -->

      </div>
      <div class="grid-container">
        <% @scores.each do |score| %>
          <div class="movie-card">
            <%# if score.file.attached? %>
              <div class="movie-details" style="background-image: <%#= cl_image_path score.file.key, :format => :jpg, :page=>1, height: 180, width: 140, crop: :fill %>">
                <span><%= score.composer.name %></span>
                <h4><%= score.title %></h4>
              </div>
          </div>
          <%# end %>
        <% end %>
      </div>
    </div>
