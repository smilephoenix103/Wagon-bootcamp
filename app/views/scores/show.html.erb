<h1> I'm the View ! </h1>

<div class="card-score">
       <% if @score.file.attached? %>
       <%= cl_image_tag @score.file.key, height: 252, width: 252, crop: :fill %>
     <% else %>
       <img src="https://miro.medium.com/max/1836/1*NzLGpAE4V7LJCfibfgIlHA@2x.png" height="140px" width="180px" alt="picture" />
     <% end %>
  <div class="card-score-infos">
    <h2><%= @score.composer.name %></h2>
    <h4><%= @score.title %></h4>
    <br>
    <%= link_to "Open in the viewer", viewer_score_path(@score), class: "login-btn mt-5" %>
  </div>
</div>

<div class="card">
 <div class="card-body">
  <h5>Biography</h5> 
  <p><%= @score.composer.bio %></p>
    <div>
    <%= link_to "Back to Scores", scores_path, class: "login-btn mt-5" %>
  </div>
 </div>
</div>

