<div class="container full-height">
  <h1> <%= @collection.title %> </h1>
  <div class="grid-collection mt-3">
    <% @scores.each do |score| %>
        <%= link_to score_path(score) do %>
          <div class="card-category text-center" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/lunch.jpg);">
              <h5><%= score.title %></h5>
            </div>
        <% end %>
    <% end %>
  </div>
</div>

